@using Portfolio.Models
@model Task
@{
    ViewBag.Title = "Source";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>@ViewBag.Header</h3>
<form method="POST">
    <div class="form-group">
        @Html.Label("Ad")
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("URL")
        @Html.TextBoxFor(m => m.Link, new { @class = "form-control form-control-lg" })
        @Html.ValidationMessageFor(m => m.Link, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Texnologiya")
        <select class="form-control" id="technologyId" name="technologyId">
            @foreach (var tech in ViewBag.Technologies)
            {
                if (Model != null && tech.Id == Model.TechnologyId)
                {
                    <option selected value="@tech.Id">@tech.Name</option>
                }
                else
                {
                    <option value="@tech.Id">@tech.Name</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mb-2">@ViewBag.Button</button>
</form>

