@using Portfolio.Models
@model Project
@{
    ViewBag.Title = "Source";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>@ViewBag.Header</h3>
<form method="POST">
    <div class="form-group">
        @Html.Label("Ad")
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Haqqında")
        @Html.TextBoxFor(m => m.About, new { @class = "form-control form-control-lg" })
        @Html.ValidationMessageFor(m => m.About, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Kod URL")
        @Html.TextBoxFor(m => m.CodeURL, new { @class = "form-control form-control-lg" })
        @Html.ValidationMessageFor(m => m.CodeURL, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Hazır layihənin URL-i")
        @Html.TextBoxFor(m => m.RealUrl, new { @class = "form-control form-control-lg" })
        @Html.ValidationMessageFor(m => m.RealUrl, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Başlama tarixi")
        @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control form-control-lg" })
        @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Bitmə tarixi")
        @Html.TextBoxFor(m => m.FinishDate, new { @class = "form-control form-control-lg" })
        @Html.ValidationMessageFor(m => m.FinishDate, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary mb-2">@ViewBag.Button</button>
</form>