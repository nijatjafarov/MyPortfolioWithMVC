
@{
    ViewBag.Title = "ProjAndTech";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>@ViewBag.Header</h3>
<form method="POST">
    <div class="form-group">
        @Html.Label("Layihə")
        <select class="form-control" id="projId" name="projId">
            @foreach (var project in ViewBag.Projects)
            {
                if (ViewBag.SelectedProject != null && project.Id == ViewBag.SelectedProject.Id)
                {
                    <option selected value="@project.Id">@project.Name</option>
                }
                else
                {
                    <option value="@project.Id">@project.Name</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        @Html.Label("Texnologiya")
        <select class="form-control" id="techId" name="techId">
            @foreach (var tech in ViewBag.Technologies)
            {
                if (ViewBag.SelectedTech != null && tech.Id == ViewBag.SelectedTech.Id)
                {
                    <option selected value="@tech.Id">@tech.Name</option>
                }
                else
                {
                    <option value="@tech.Id">@tech.Name</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mb-2">@ViewBag.Button</button>
</form>

