
@{
    ViewBag.Title = "Photo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>@ViewBag.Header</h3>
<form method="POST" enctype="multipart/form-data">
    <div class="form-group">
        @Html.Label("Şəkil seç")
        <input type="file" name="ImageFile" id="ImageFile" class="form-control-file" onchange="fileCheck(this);" required />
    </div>
    <div class="form-group">
        @Html.Label("Layihə")
        <select class="form-control" id="projectId" name="projectId">
            @foreach (var project in ViewBag.Projects)
            {
                if (Model != null && project.Id == Model.ProjectId)
                {
                    <option selected value="@project.Id">@project.Name</option>
                }
                else
                {
                    <option value="@project.Id">@project.Name</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mb-2">@ViewBag.Button</button>
</form>